<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/colorDarkPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorDarkOnPrimary</item>
        <item name="colorSecondary">@color/colorDarkSecondary</item>
        <item name="colorAccent">@color/colorDarkSecondary</item>
        <item name="colorSecondaryVariant">@color/colorDarkSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorDarkOnSecondary</item>
        <item name="toolbarStyle">@style/mToolbarTheme</item>
    </style>

    <style name="mTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#f5f6f7</item>
    </style>

    <!--    <style name="TextInputLayoutBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">-->
    <!--        <item name="boxStrokeColor">@color/colorAccent</item>-->
    <!--        <item name="boxStrokeWidth">2dp</item>-->
    <!--    </style>-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">?android:colorBackground</item>
    </style>
</resources>
